<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/login_back"
    android:id="@+id/login_frame"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.arshatinder.smarthome.login"
    tools:showIn="@layout/activity_login">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:id="@+id/loglog"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="45sp"
        android:textStyle="bold" />

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loglog2"
        android:layout_below="@+id/loglog"
        android:layout_marginTop="5dp"
        android:textSize="18dp"
        android:text="We hope you enjoy"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loglog3"
        android:layout_below="@+id/loglog2"
        android:textSize="18dp"
        android:text="the stay"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loglog3"
        android:textStyle="bold"
        android:id="@+id/loglog4"
        android:text="___________"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loglog4"
        android:textSize="15dp"
        android:textStyle="bold"
        android:id="@+id/loglog5"
        android:layout_marginTop="5dp"
        android:text="Sign in"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_username"
        android:layout_width="wrap_content"
        android:layout_below="@id/loglog5"
        android:textStyle="bold"
        android:textColorHint="#fff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/loglogin"
            android:ems="12"
            android:textColor="#fff"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_password"
        android:layout_width="wrap_content"
        android:textColorHint="#fff"
        android:layout_below="@id/input_layout_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/logpass"
            android:ems="12"
            android:textColor="#fff"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password" />

    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="90dp"
        android:minWidth="90dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/logbutton"
        android:layout_marginTop="40dp"
        android:src="@mipmap/login_button"
        android:layout_below="@id/input_layout_password"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:text="Forget password?"
        android:id="@+id/forgetpass"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/logbutton"/>
</RelativeLayout>
