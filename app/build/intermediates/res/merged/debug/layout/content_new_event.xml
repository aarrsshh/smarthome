<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E3E1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.arshatinder.smarthome.new_event"
    tools:showIn="@layout/activity_new_event">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_summary"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:layout_height="wrap_content">
        <EditText
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add Summary"
            android:id="@+id/summary"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_notes"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/input_layout_summary"
        android:layout_height="wrap_content">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:lines="4"
        android:layout_marginTop="7dp"
        android:hint="Add Notes"
        android:id="@+id/note"/>
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Due Date"
        android:layout_below="@+id/input_layout_notes"
        android:layout_marginTop="10dp"
        android:textSize="17dp"
        android:id="@+id/date2"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/input_layout_notes"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/date2"
        android:background="#c0c0c0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:text="None "
        android:padding="10dp"
        android:textColor="#000"
        android:textSize="20dp"
        android:layout_below="@id/date2"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deadline"
        android:layout_below="@+id/date"
        android:layout_marginTop="10dp"
        android:textSize="17dp"
        android:id="@+id/date3"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/date"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/date2"
        android:background="#c0c0c0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exdate"
        android:text="None "
        android:textSize="20dp"
        android:textColor="#000"
        android:padding="10dp"
        android:layout_below="@id/date3"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Importance"
        android:layout_below="@+id/exdate"
        android:layout_marginTop="10dp"
        android:textSize="17dp"
        android:id="@+id/imp"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/exdate"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/imp"
        android:background="#c0c0c0"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/importance"
        android:layout_below="@id/imp"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remainder"
        android:layout_below="@+id/importance"
        android:layout_marginTop="10dp"
        android:textSize="17dp"
        android:id="@+id/remain"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/importance"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/remain"
        android:background="#c0c0c0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/remainder_date"
        android:text="None"
        android:textSize="20dp"
        android:textColor="#000"
        android:padding="10dp"
        android:layout_below="@id/remain"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/remainder_time"
        android:text="None"
        android:textSize="20dp"
        android:textColor="#000"
        android:padding="10dp"
        android:layout_toRightOf="@+id/remainder_date"
        android:layout_below="@id/remain"
        android:layout_marginTop="5dp" />

</RelativeLayout>
