<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.arshatinder.smarthome.app_lock"
    tools:showIn="@layout/activity_app_lock">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Lock Setting"
        android:textSize="17dp"
        android:id="@+id/set1"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/set1"
        android:background="#c0c0c0"/>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/aoio"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/set1"
        android:orientation="horizontal">
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/aooa"
            android:orientation="vertical">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enable App Lock"
                android:textSize="18dp"
                android:textColor="#000" />

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The default Password is '1234'"/>
        </LinearLayout>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch1"
            android:layout_alignEnd="@+id/aooa"
            android:layout_alignRight="@+id/aooa"
            android:layout_width="30dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:theme="@style/MySwitch"
            android:layout_height="30dp"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aoio"
        android:id="@+id/aoio2"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/app_lock_pass"
            android:text="Change Password"
            android:textSize="18dp"
            android:textColor="#000" />
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You can Change your Default Password"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Advance Interaction"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/aoio2"
        android:textSize="17dp"
        android:id="@+id/set2"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="2dp"
        android:layout_below="@+id/aoio2"
        android:layout_marginTop="35dp"
        android:layout_toRightOf="@+id/set2"
        android:background="#c0c0c0"/>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/aoio3"
        android:layout_below="@+id/set2"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/aooa2"
            android:orientation="vertical">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enable SMS Alert"
                android:textSize="18dp"
                android:textColor="#000" />
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="The default Max Attempts are '3'"/>
        </LinearLayout>
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch2"
            android:layout_alignEnd="@+id/aooa"
            android:layout_alignRight="@+id/aooa"
            android:layout_width="30dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:theme="@style/MySwitch"
            android:layout_height="30dp"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/aoio3"
        android:id="@+id/aoio4">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phone"
            android:text="Change Phone Number"
            android:textSize="18dp"
            android:textColor="#000" />
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You can Change Phone Number for Alerts"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/aoio5"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/aoio4"
        android:orientation="vertical">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/send_sms"
            android:text="Set Max Attempts"
            android:textSize="18dp"
            android:textColor="#000" />
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You can Change Default Max Attempts for Alerts"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Interface Settings"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/aoio5"
        android:textSize="17dp"
        android:id="@+id/set3"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="2dp"
        android:layout_below="@+id/aoio5"
        android:layout_marginTop="35dp"
        android:layout_toRightOf="@+id/set3"
        android:background="#c0c0c0"/>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/aoio6"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/set3"
        android:orientation="vertical">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chg_bgd"
            android:text="Change Background"
            android:textSize="18dp"
            android:textColor="#000" />
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change the background of your App Lock"/>
    </LinearLayout>
</RelativeLayout>
